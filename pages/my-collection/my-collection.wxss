/* pages/my-collection/my-collection.wxss */
/* 搜索 */
.Collage-box{padding-top: 44px}
.my-release{padding-top: 44px}
.null{height: 60px;line-height: 60px;text-align: center;color: #999;font-size: 14px;padding-top: 44px}

.Collage-menu {
    background: #fff;
    width: 100%;
    height: 20px;
    line-height: 20px;
    display: flex;
    border-top: 2px solid #f0f0f0;
    position: fixed;
    border-bottom: 2px solid #f0f0f0;
    padding: 10px 0;
    top: 0;
    left: 0;
    z-index: 2;
}
.Collage-menu .li {
    position: relative;
    flex: 1;
    font-size: 15px;
    color: #222;
    border-right: 1px solid #f0f0f0;
    text-align: center;
}
.Collage-title {
    background-color: rgba(0,0,0,0.3);
    padding: 6px 15px;
    position: absolute;
    width: calc(100% - 30px);
    bottom: 0;
}
.Collage-title p {
    color: #fff;
    width: 80%;
    height: 22px;
    line-height: 22px;
    font-size: 14px;
    display: block;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap
}
.cancel-collection {
    padding: 1px 8px;
    background-color: #ff2c5e;
    border-radius: 12px;
    color: white;
    position: absolute;
    right: 15px;
    top: 15px;
    z-index:1;
    font-size:14px;
}
span {
    display: inline-block;
}
.price-box {
    position: absolute;
    right: 15px;
    top: 6px;
    color: #29D5D0;
    font-size: 16px;
}
.Collage{
  height: 200px;
    position: relative;
    border-bottom: 6px solid #fff;
}
.b_10{
  width: 100%;
  height: 200px;
  position: relative
}
.active .line{
	width: 40%;
	height: 1px;
	background-color: #29d5d0;
	position: absolute;
	left: 50%;
	margin-left: -20%;
	bottom: -10px;
}
.Collage-menu .active{
	color: #29d5d0;
}
/* 搜索 */
.my-release .order {
    border-bottom: 1px solid #f0f0f0;
    background-color: white;
    font-size: 14px;
    padding: 10px 15px;
    position: relative;
}
.my-release .ul .li .left {
    float: left;
     width: 80px; 
}
.order-tu {
    width: 70px;
    height: 70px;
    margin-right: 15px;
}
.my-release .ul .li .index-right {
    float: left;
    line-height: 40px;
    width: calc(100% - 80px);
}
.my-release .ul .order .right .jiage {
    color: #29D5D0;
}
.my-release .ul .order .right label {
    line-height: 25px;
    height: 25px;
    display:block;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap
}
.cancel-good {
    height: 19px;
    width: 70px;
    border-radius: 6px;
    border: 1px solid #29D5D0;
    color: #29D5D0;
    float: right;
    text-align: center;
    line-height: 19px;
    margin-top: 2px;
    display: block
}
