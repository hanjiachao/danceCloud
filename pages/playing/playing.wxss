/* pages/playing/playing.wxss */
.conts{
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  overflow:hidden;
}
.conts .bg{
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}
.conts .bg image{
  width: 100%;
  height: 100%;
}
.conts .main{
  position: absolute;
	bottom: 0;
	top: 0;
	width: 100%;
	z-index: 2;
	overflow: hidden;
}
.conts .main .top{
  width: 600rpx;
  height: 600rpx;
  margin: 162rpx auto 0;
  position: relative;
}
.conts .main .top image{
  width: 100%;
  height: 100%;
}
.conts .main .top .img{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 372rpx;
  height: 372rpx;
  border-radius: 50%;
  overflow: hidden;
  z-index: 2;
}
.conts .main .top .img .pause{
  animation: rotate 10s linear infinite;
}
@keyframes rotate{
  from{transform:rotate(0deg)}
  to{transform:rotate(360deg)}
}
.conts .main .top .content{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9;
}
.conts .main .btm .msg{
  height: 40rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.conts .main .btm .msg .text{
  color: #040404;
  font-size: 28rpx;
}
.conts .main .btm .msg .operate{
  height: 100%;
  display: flex;
  align-items: center;
  position: relative;
}
.conts .main .btm .msg .operate .shareBtn{
  padding: 0;
  line-height: auto;
  border: 0;
  background: transparent;
}
.conts .main .btm .msg .operate .shareBtn::after{
  border: 0;
}
.conts .main .btm .msg .operate .speed{
  width: 77rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  color: #29D5D0;
  font-size: 24rpx;
  border: 2rpx solid #29D5D0;
  border-radius: 18rpx;
}
.conts .main .btm .msg .operate .speedList{
  position: absolute;
  left: 0rpx;
  bottom: 40rpx;
  width: 77rpx;
  line-height: 36rpx;
  text-align: center;
  color: #29D5D0;
  background: #fff;
  font-size: 24rpx;
  border: 2rpx solid #29D5D0;
  border-radius: 18rpx;
  z-index: 999;
}
.conts .main .btm .msg .operate image{
  width: 28rpx;
  height: 28rpx;
  margin-left: 30rpx;
}
.conts .main .btm .slider{
  margin: 50rpx 30rpx 20rpx;
}
.conts .main .btm .slider .info{
  color: #303030;
  font-size: 24rpx;
  height: 20rpx;
  line-height: 20rpx;
  display: flex;
  justify-content: space-between;
}
.conts .main .btn{
  width: 344rpx;
  height: 90rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.conts .main .btn .change{
  width: 27rpx;
  height: 35rpx;
}
.conts .main .btn .play{
  width: 90rpx;
  height: 90rpx;
}