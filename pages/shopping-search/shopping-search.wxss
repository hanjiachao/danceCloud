/* pages/shopping-search/shopping-search.wxss */
/*搜索*/

.a_43{
  height: 60px;
  width: 100%;
  position: relative
}

.cancel-box input::-webkit-input-placeholder{
	color: #222;
	font-size: 14px;
}
.search_box{
  position: absolute;
  top: 0px;
  left: 0px;
  
}
.search_box input {
    color: #d9d9d9;
    line-height: 35px;
    height: 35px;
    background-color: white;
    padding-left: 10px
}
.search_box {
    height: 35px;
    background-color: #fff;
    border-radius: 40px;
    padding: 0px 10px;
    margin: 0px 60px;
    width: calc(100% - 140px);
    top: 12px
}
.search_box .left {
    float: left;
    width: 18px;
    line-height: 35px;
    padding-left: 5px;
    height: 18px;
}
.search_box .search {
    line-height: 35px;
    float: right;
    width: 45px;
    position: relative;
}
.shu {
    height: 17px;
    width: 1px;
    background-color: #cacaca;
    display: inline-block;
    position: absolute;
    top: 9px;
}
.search_box .cancel-search .button {
    font-weight: normal;
    color: #29d5d0;
    font-size: 15px;
    background-color: transparent;
    cursor: pointer;
    padding-left: 10px;
}
.search_box .left image {
    width: 100%;
    vertical-align: -5px;
    height: 100%;
}
.Collage-menu {
    background: #fff;
    height: 20px;
    line-height: 20px;
    display: flex;
    position: relative;
    border-bottom: 2px solid #f0f0f0;
    padding: 10px 0px;
}
.Collage-menu .li {
    position: relative;
    flex: 1;
    font-size: 15px;
    color: #222;
    border-right: 1px solid #f0f0f0;
    text-align: center;
}
.xian{
	width: 40%;
	height: 1px;
	background-color: #29d5d0;
	position: absolute;
	left: 50%;
	margin-left: -20%;
	bottom: -10px;
}
.Collage-menu .active{
	color: #29d5d0;
}

/* 内容 */
.my-release .order {
    border-bottom: 1px solid #f0f0f0;
}
.form .li, .my-release .li {
    background-color: white;
    font-size: 14px;
}
.my-release .li {
    padding: 10px 15px;
    position: relative;
}
.my-release .ul .li .left {
    float: left;
    /* width: 80px; */
}
.my-release .ul .li .left label, .my-release .ul .li .right label {
    display: block;
    line-height: 25px;
}
.my-release .left label {
    color: #222222;
}
.order-tu {
    width: 70px;
    height: 70px;
    margin-right: 15px;
}
.my-release .ul .li .index-right {
    margin-left:80px;
    line-height: 40px;
    width: calc(100% - 80px);
}
.my-release .ul .order .right label {
    line-height: 25px;
    height: 25px;
}
.my-release .ul .li .index-right label {
    color: #333;
}
.my-release .ul .order .right .two {
    font-size: 12px;
    color: #919191;
}
.my-release .ul .order .right label {
    line-height: 25px;
    height: 25px;
}
.my-release .ul .order .right .two span {
    color: #ff2c5e;
    padding: 0px 3px;
}
span {
    display: inline-block;
}
.my-release .ul .order .right .three {
    color: #999999;
}
.my-release .ul .order .right label {
    line-height: 25px;
    height: 25px;
}
.my-release .ul .order .right .three span {
    /* font-size: 16px; */
    color: #29D5D0;
}
.enter {
    padding: 2px 10px;
    background: -webkit-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: -o-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: -moz-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: linear-gradient(90deg, #50f1c0, #29ddd9);
    border-radius: 12px;
    color: white;
    position: absolute;
    bottom: 13px;
    right: 15px;
}