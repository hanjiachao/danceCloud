/*搜索*/
.ul{margin-bottom: 2px}
.collectionc{overflow:hidden;text-overflow:ellipsis;white-space:nowrap;height: 25px;}
.null{height: 50px;line-height: 50px;color: #999;text-align: center;font-size: 14px}

.searchPage{
    width: 100%;
    padding: 10px 0px;
}
.search_box .cancel-search button {
    font-weight: normal;
    color: #29d5d0;
    font-size: 15px;
    background-color: transparent;
    cursor: pointer;
    padding-left: 10px;
}
.cancel-box input::-webkit-input-placeholder{
	color: #222;
	font-size: 14px;
}
.Collage-menu {
    background: #fff;
    width: 100%;
    height: 20px;
    line-height: 20px;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    border-top: 2px solid #f0f0f0;
    border-bottom: 2px solid #f0f0f0;
    padding: 10px 0px;
    z-index: 1;
}
.Collage-menu .li {
    position: relative;
    flex: 1;
    font-size: 15px;
    color: #222;
    border-right: 1px solid #f0f0f0;
    text-align: center;
}
.active .xian{
	width: 40%;
	height: 1px;
	background-color: #29d5d0;
	position: absolute;
	left: 50%;
	margin-left: -20%;
	bottom: -10px;
}
.Collage-menu .active{
	color: #29d5d0;
}
