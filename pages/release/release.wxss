/* pages/release/release.wxss */
/*发布*/
.choice{position: fixed;background: rgba(0,0,0,0.2);width: 100%;height: 100%;left: 0;bottom: 0}
.choice view{width: 100%;height: 50px;line-height: 50px;background: #fff;text-align: center;border-top: 1px solid #eee;position: absolute}
.choice :nth-child(1){bottom: 51px}
.choice :nth-child(2){bottom: 0}

.textarea{
	width:calc(100% - 30px);
	border: none;
	resize: none;
	padding: 20px 15px;
	height: 120px;
}

.release-box{
	padding: 10px 30px;
}
.release-button{
	border-top: 6px solid #f0f0f0;
}
.release-tu .li image {
    width: 90%;
    height: 90px;
}
.community .li span {
    position: relative;
    display: inline;
}
.release-tu .li:nth-child(1), .release-tu .li:nth-child(4), .release-tu .li:nth-child(7) {
    text-align: left;
}
.release-tu .li .a_51 {
    width: 15px;
    height: 15px;
    position: absolute;
    right: 4px;
    bottom: 75px;
}
.release-tu .li {
    width: 33%;
    text-align: center;
    float: left;
    position: relative;
    margin-bottom: 8px;
}
.share_fixed {
    background: rgba(0,0,0,0.5);
    position: fixed;
    z-index: 1;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    display: none;
}
.photo_menu {
    text-align: center;
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 99;
}
.photo_menu .ul {
    padding: 5px 0px 5px 0px!important;
}
.photo_menu .li {
    border-bottom: 1px solid #e3e3e3;
    width: 100%;
    padding: 10px 0px;
    color: #222;
}
.photo_menu .last {
    border-bottom: none;
}
.photo_menu .li p {
    font-size: 12px;
    color: #cccccc;
    margin-top: 5px;
}
/*发布*/
.confirm-box {
    width: calc(100% - 30px);
    background-color: white;
    position: fixed;
    bottom: 0px;
    text-align: center;
    padding: 10px 15px;
    z-index: -1;
}
.confirm-box .ul {
    padding: 0px 15px;
}
.confirm-box .ul .li:nth-child(1) {
    color: #29d5d0;
    border: 1px solid #29d5d0;
    height: 35px;
    line-height: 35px;
    border-radius: 21px;
    font-size: 16px;
}
.confirm-box .ul .li {
    float: left;
    width: 45%;
}
.confirm-box .ul .li:nth-child(2) {
    float: right;
    background: -webkit-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: -o-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: -moz-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: linear-gradient(90deg, #50f1c0, #29ddd9);
    height: 35px;
    line-height: 35px;
    color: white;
    border-radius: 21px;
    font-size: 16px;
}
.release-tu .li:nth-child(3){
  text-align: right
}