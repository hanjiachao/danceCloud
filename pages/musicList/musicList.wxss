/* pages/musicList/musicList.wxss */
.conts .head{
  height: 284rpx;
  position: relative;
}
.conts .head>image{
  width: 100%;
  height: 100%;
  filter: blur(6rpx);
  opacity: .5;
}
.conts .head .top{
  width: 345rpx;
  height: 257rpx;
  position: absolute;
  top: 72rpx;
  left: 236rpx;
}
.conts .head .top>image{
  width: 100%;
  height: 100%;
}
.conts .head .top .img{
  width: 236rpx;
  height: 236rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: absolute;
  top: 10rpx;
  left: 10rpx;
}
.conts .head .top .img image{
  width: 100%;
  height: 100%;
}
.conts .tit{
  background: #F0F0F0;
  height: 75rpx;
  display: flex;
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
}
.conts .tit .text{
  color: #29D5D0;
  font-size: 28rpx;
}
.conts .tit image{
  width: 25rpx;
  height: 25rpx;
}
.conts .list{
  padding: 40rpx 32rpx 0;
}
.conts .list .item{
  height: 140rpx;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.conts .list .item .img{
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.conts .list .item .img image{
  width: 100%;
  height: 100%;
}
.conts .list .item .msg{
  margin-left: 30rpx;
}
.conts .item .msg .name{
  color: #222222;
  font-size: 28rpx;
  line-height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.conts .item .msg .text{
  color: #919191;
  font-size: 24rpx;
  line-height: 38rpx;
  margin-top: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}