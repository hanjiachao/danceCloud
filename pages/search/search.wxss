.a_43{
  height: 60px;
  width: 100%;
  position: relative
}

.cancel-box input::-webkit-input-placeholder{
	color: #222;
	font-size: 14px;
}
.search_box{
  position: absolute;
  top: 0px;
  left: 0px;
  
}
.search_view{
    position: fixed;
    top:0px;
    left:0px;
    width:100%;
    z-index:22;
    height:108px;
}
.search_box input {
    color: #d9d9d9;
    line-height: 35px;
    height: 35px;
    background-color: white;
    padding-left: 10px
}
.search_box {
    height:35px;
    background-color:#fff;
    border-radius:40px;
    padding:0px 10px;
    margin:0px 20px;
    width:calc(100% - 60px);
    top:12px;
}
.search_box .left {
    float: left;
    width: 18px;
    line-height: 35px;
    padding-left: 5px;
    height: 18px;
}
.search_box .search {
    line-height: 35px;
    float: right;
    width: 45px;
    position: relative;
}
.shu {
    height: 17px;
    width: 1px;
    background-color: #cacaca;
    display: inline-block;
    position: absolute;
    top: 9px;
}
.search_box .cancel-search .button {
    font-weight: normal;
    color: #29d5d0;
    font-size: 15px;
    background-color: transparent;
    cursor: pointer;
    padding-left: 10px;
}
.search_box .left image {
    width: 100%;
    vertical-align: -5px;
    height: 100%;
}
.Collage-menu {
    background: #fff;
    height: 20px;
    line-height: 20px;
    display: flex;
    position: relative;
    border-bottom: 2px solid #f0f0f0;
    padding: 10px 0px;
    top:-6px;
}
.Collage-menu .li {
    position: relative;
    flex: 1;
    font-size: 15px;
    color: #222;
    border-right: 1px solid #f0f0f0;
    text-align: center;
}
.Collage-menu .active .xian{
	width: 40%;
	height: 1px;
	background-color: #29d5d0;
	position: absolute;
	left: 50%;
	margin-left: -20%;
	bottom: -10px;
}
.Collage-menu .active{
	color: #29d5d0!important;
}
