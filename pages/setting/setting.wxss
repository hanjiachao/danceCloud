/*设置*/
.setting-form {
	padding: 0px 0px;
}

.setting-form .li {
	padding: 0px 15px;
	border-bottom: 1px solid #eee;
	margin-bottom: 0px;
	background-color: white;
}

.setting-form .right1 image {
	height: 11px;
	vertical-align: middle;
  width: 8px
}
.revirse-btn .btn {
    width: 100%;
    height: 38px;
    line-height: 38px;
    border-radius: 21px;
    background: -webkit-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: -o-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: -moz-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: linear-gradient(90deg, #50f1c0, #29ddd9);
    color: #fff;
    text-align: center;
    margin: 40px auto 0;
    font-size: 16px;
    -webkit-box-shadow: 1px 6px 20px #c6f6f5;
    box-shadow: 1px 6px 20px #c6f6f5;
}
.revirse-btn {
    margin-top: 40px;
    padding: 0px 15px;
    width: calc(100% - 30px);
}
.setting-form .left {
	float: left;
	line-height: 45px;
	color: #666;
}

.setting-form .left span {
	font-size: 14px;
}

.setting-form .right1 {
	float: right;
	line-height: 45px;
	color: #999;
}

.setting-form .right1 span {
	font-size: 14px;
}

.setting-form .login-btn {
	border-bottom: none;
	padding-top: 20px;
}

.login-btn button {
	width: 80%;
    background: -webkit-linear-gradient(90deg, #50f1c0, #29ddd9); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(90deg, #50f1c0, #29ddd9); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(90deg, #50f1c0, #29ddd9); /* Firefox 3.6 - 15 */
    background: linear-gradient(90deg, #50f1c0, #29ddd9); /* 标准的语法（必须放在最后） */
    height: 40px;
    line-height: 40px;
    color: white;
    text-align: center;
    border-radius: 21px;
    font-size: 16px;
    margin: 0 auto;
    display: block;
}
.tream_box .right .gongxian {
	color: #999;
}
