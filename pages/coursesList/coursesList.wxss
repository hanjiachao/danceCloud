/* pages/aboutUs/aboutUs.wxss */
.course{
    padding:15px;
    overflow: hidden;
}
.course_ul{
    float: left;
}
.course_lk{
    margin-bottom: 10px;
    overflow: hidden;
    position: relative;
}
.course_ul image{
    width:120px;
    height:67.5px;
}
.course_title{
    margin-left:10px;
    float: left;
    font-size:14px;
    display: table;
    height:67.5px;
    width: calc(100% - 130px);
}
.cell{
    display: table-cell;
    vertical-align: middle;
}
.content{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.live{
    position:absolute;
    right:0px;
    top:0px;
    font-size:14px;
    color:#50f1c0;

}