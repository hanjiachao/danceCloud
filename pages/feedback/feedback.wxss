/*反馈*/

.feekback-form {
	padding: 10px 15px 0px 15px;
}

.feekback-form .textarea-box {
	background-color: white;
	padding: 15px 15px;
	    margin-bottom: 8px;
}

.feekback-form .textarea-box textarea {
	width:100% ;
	color: #c4c4c4;
	resize: none;
	font-size: 12px;
	height: 120px;
}
.feekback-form .input input::-webkit-input-placeholder{
	color: #cacaca;
}
.feekback-form .input input {
	height: 40px;
	line-height: 40px;
	padding: 0px 15px;
	width: calc(100% - 30px);
	font-size: 12px;
}

.feekback-form .input {
    background-color: white;
    width: calc(100% - 0px);
    padding: 0px 0px;
}

.feekback-form .login-btn {
	border-bottom: none;
	padding: 50px 20px 0px 20px;
}

.feekback-form .login-btn button {
	border-radius: 40px;
	background: #f52674;
	color: #fff;
	line-height: 40px;
	box-shadow: 2px 2px 8px #f52674;
	width: 100%;
}
.feekback-form .textarea-box .c4c4c4::-webkit-input-placeholder{
	color:#c4c4c4;
}
.revirse-btn {
    margin-top: 40px;
    padding: 0px 15px;
    width: calc(100% - 30px);
}
.revirse-btn .btn {
    width: 100%;
    height: 38px;
    line-height: 38px;
    border-radius: 21px;
    background: -webkit-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: -o-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: -moz-linear-gradient(90deg, #50f1c0, #29ddd9);
    background: linear-gradient(90deg, #50f1c0, #29ddd9);
    color: #fff;
    text-align: center;
    margin: 40px auto 0;
    font-size: 16px;
    -webkit-box-shadow: 1px 6px 20px #c6f6f5;
    box-shadow: 1px 6px 20px #c6f6f5;
}
/*反馈*/